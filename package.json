{
  "name": "graphql-extra",
  "description": "GraphQL AST/SDL toolkit with extra features for code generation & testing",
  "version": "0.2.0",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "license": "MIT",
  "homepage": "https://graphql-extra.netlify.com",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/vadistic/graphql-extra"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf docs && rm -rf coverage",
    "lint": "eslint --ext .ts src/**",
    "format": "prettier --write src/**",
    "build": "tsc -p tsconfig.build.json",
    "docs": "typedoc src",
    "test": "jest",
    "cov": "jest --coverage",
    "prepublishOnly": "yarn format && yarn lint && yarn test && yarn docs && yarn clean && yarn build "
  },
  "peerDependencies": {
    "graphql": ">=14.6.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@vadistic/eslint-config-base": "^0.2.2",
    "@vadistic/prettier-config": "^0.2.2",
    "@vadistic/scripts": "^0.2.0",
    "eslint": "^6.8.0",
    "graphql": "^15.0.0",
    "jest": "^25.2.7",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
  }
}
